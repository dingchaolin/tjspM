<% include ../navigation %>
<div class="ch-container" xmlns="http://www.w3.org/1999/html">
    <% include ../sidebar %>
    <div id="content" class="col-lg-10 col-sm-10">
        <div>
            <ul class="breadcrumb">
                <li><a href="/">主页</a></li>
                <li><a href="/platform/GetGiftInfo">平台礼包列表</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="box col-md-12">
                <div class="box-inner">
                    <div class="box-header well">
                        <h2><i class="glyphicon glyphicon-user">平台礼包列表</i></h2>

                        <div class="input-group input-group-md" align="right" style="float: right;margin-top: -8px;">
                            <a href="/platform/GetGiftAddPage" target="_blank"><i class="glyphicon glyphicon-plus gray"
                                                                                style="margin: 11px 0 0 8px;font-size: 16px;"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <table class="table table-striped table-bordered table-hover bootstrap-datatable responsive">
                            <thead>
                            <tr>
                                <th>礼包名称</th>
                                <th>礼包链接</th>
                                <th>跳转链接</th>
                                <th>领取时间</th>
                                <th>上传时间</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody class="content" id="listbody">
                            <% gifts.forEach(function(giftinfo, index){ %>
                            <tr ad-id="<%= giftinfo.gift_id%>">
                                <td class="col-md-1 name"><%= giftinfo.gift_name %></td>
                                <td class="col-md-2 url"><%= giftinfo.gift_url %></td>
                                <td class="col-md-2 jumpurl"><%= giftinfo.jump_url %></td>
                                <td class="col-md-1 gift_time"><%= giftinfo.gift_time %></td>
                                <td class="col-md-1 gift_addtime"><%= giftinfo.gift_addtime %></td>
                                <td class="col-md-1">
                                    <button class="btn btn-danger delete gift_delete"><i
                                                class="glyphicon glyphicon-edit icon-white"></i> 删除
                                    </button>
                                </td>
                            </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!--<div id="page" align="right" style="width:97%"></div>-->
                    <div id="Pagination" class="pagination"></div>
                    <!--/span-->
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".gift_delete").click(function () {
        var delete_info = {};
        delete_info.gift_id = $(this).parents('tr').attr('ad-id');
        $.post("/platform/DeleteGifoInfo", delete_info, function (result) {
            window.location.href = '/platform/GetGiftInfo'
        });
    });
</script>