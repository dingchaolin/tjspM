<%include ../navigation%>
<div class="ch-container">
    <% include ../sidebar%>
    <div id="content" class="col-lg-10 col-sm-10">
        <div>
            <ul class="breadcrumb">
                <li><a href="/">主页</a></li>
                <li><a href="/qianyan/indexGet">房间受限列表</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="box col-md-12">
                <div class="box-inner">
                    <div class="box-header well" style='padding-top:0'>
                        <h2 style='margin-top:5px;'><i class="glyphicon glyphicon-user"> 房间受限列表</i></h2>
                        <!-- <form id="search_form" action="/room/search" method="post"> -->
                        <div class="input-group input-group-md" align="right" style='margin-top:-2px; float:right;'>
                            <input id="isearch" type="text" style="text-align: center; margin:0 9px 0 0; border-radius:5px; border:1px solid #d1d1d1;">
                            <i class="glyphicon glyphicon-search gray" id="search" style="margin-top:11px; font-size:15px;"></i>
                            <a href="/platform/roomVerifyAdd" target="_blank"><i class="glyphicon glyphicon-plus gray" style="margin: 10px 0 0 8px;font-size: 16px;"></i></a>
                        </div>
                        <!-- </form> -->
                    </div>
                    <div class="box-content">
                        <table id="roomlist" class="table table-striped table-bordered table-hover bootstrap-datatable responsive">
                            <thead>
                            <tr>
                                <th>房间名称</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody id="listbody">
                            </tbody>
                        </table>
                        <div id="Pagination" class="pagination">
                        </div>
                    </div>
                </div>
                <!--/span-->
            </div>
        </div>
        <style type="text/css">
            @charset "utf-8";
            .pagination {
                float: right;
            }

            .pagination a {
                text-decoration: none;
                border: 1px solid #AAE;
                color: #15B;
            }

            .pagination a, .pagination span {
                display: inline-block;
                padding: 0.1em 0.4em;
                margin-right: 5px;
                margin-bottom: 5px;
            }

            .pagination .current {
                background: #26B;
                color: #fff;
                border: 1px solid #AAE;
            }

            .pagination .current.prev, .pagination .current.next{
                color:#999;
                border-color:#999;
                background:#fff;
            }
        </style>


        <script type="application/javascript">


            $(function(){
                var pageIndex = 0;     //页面索引初始值
                InitTable(0);
                $("#Pagination").pagination('<%= total_pages%>', {
                    callback: PageCallback,
                    prev_text: '上一页',       //上一页按钮里text
                    next_text: '下一页',       //下一页按钮里text
                    items_per_page: 10,  //显示条数
                    num_display_entries: 4,    //连续分页主体部分分页条目数
                    current_page: pageIndex,   //当前页索引
                    num_edge_entries: 2        //两侧首尾分页条目数
                });

                function PageCallback(index, jq) {
                    InitTable(index);
                }
                function InitTable(pageIndex) {
                    var data={};
                    data.current_page=pageIndex;
                    $.post("/platform/roomVerifyListPOST", data, function(result){
                        var str = '' ;
                        var resInfo =result.data;
                        for(var i = 0; i< resInfo.length; i++){
                            str = str+"<tr c_hash='"+resInfo[i].c_hash+"'><td class='col-md-1 name'>"+resInfo[i].c_chatroom_name+"</td>";
                            if( resInfo[i].c_status == 0){
                                str = str+"<th>受限</th>";
                            }else{
                                str = str+"<th>不受限</th>";
                            }
                            str = str+"<td class='col-md-1 button'><input type='button'  class='btn btn-danger btnDelete' value='删除'/></td></tr>";
                        }
                        $("#listbody").empty().append(str);
                        $(".btnDelete").click(function () {
                            var hash= $(this).parents('tr').attr('c_hash');
                            $.ajax({
                                type: 'POST',
                                url: '/platform/roomManageDel',
                                data: {hash:hash},
                                success: function (result) {
                                    if (result.msg == "ok") {
                                        alert('删除成功!');
                                        location.reload();
                                    } else {
                                        alert('删除失败!');
                                    }
                                }
                            });
                        });
                        return false;
                    });
                }
            });
            $("#isearch").bind("keydown",function(e){
                if(e.which==13){
                    e.preventDefault();
                    $("#search").trigger("click");
                }
            });
            //查询窗口
            $("#search").click(function () {
                var keyword=$('#isearch').val() || '';
                $.post("/platform/roomVerifyListPOST?keyword="+keyword, function(result){
                    console.log(result)
                    var str = '' ;
                    var resInfo =result.data;
                    for (var i=0; i< resInfo.length; i++) {
                        str=str+"<tr c_hash='"+resInfo[i].c_hash+"'>";
                        str=str+'<td class="col-md-1 name">'+resInfo[i].c_chatroom_name+'</td>';
                        if( resInfo[i].c_status == 0){
                            str = str+"<th>受限</th>";
                        }else{
                            str = str+"<th>不受限</th>";
                        }
                        str = str+"<td class='col-md-1 button'><input type='button'  class='btn btn-danger btnDelete' value='删除'/></td></tr>";
                        str=str+'</td></tr>';
                    }
                    $("#listbody").empty().append(str);

                    $(".btnDelete").click(function () {
                        var hash= $(this).parents('tr').attr('c_hash');
                        $.ajax({
                            type: 'POST',
                            url: '/platform/indexDel',
                            data: {hash:hash},
                            success: function (result) {
                                if (result.msg == "ok") {
                                    alert('删除成功!');
                                    location.reload();
                                } else {
                                    alert('删除失败!');
                                }
                            }
                        });
                    });
                    return false;
                });
            });
        </script>
